<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item active">
            <%= link_to "My lists", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "New lists", new_list_path , class: "nav-link" %>
          </li>
      </ul>
    </div>
  </div>
</div>

<div class="container-fluid w-100 d-flex justify-content-center align-items-center mb-3 bg-secondary text-white banner">
  <div class="d-flex overlay rounded">
    <h2 class="text-white">Save any kind of movies</h2>
  </div>
</div>

<div class="container-fluid d-flex justify-content-around align-items-center my-3">
  <h2>My Lists</h2>
  <%= link_to "Create a movie list", new_list_path, class: "index-link" %>
</div>



<ul>
  <% @lists.each do |list| %>
    <li>
    <%= link_to "#{list.name}", list_path(list)%>
    </li>
  <% end %>
</ul>
